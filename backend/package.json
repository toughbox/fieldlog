{
  "name": "fieldlog-backend",
  "version": "1.0.0",
  "description": "FieldLog 백엔드 API 서버",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:local": "node scripts/copy-env.js local && nodemon server.js",
    "start:local": "node scripts/copy-env.js local && node server.js",
    "start:production": "node scripts/copy-env.js production && node server.js",
    "init-db": "node scripts/init-db.js",
    "restart": "taskkill /F /IM node.exe /T 2>nul || true && npm run dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.5",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.7",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
